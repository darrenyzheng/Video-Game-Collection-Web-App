{
  "version": 2,
  "builds": [
    {
      "src": "api/server.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "game/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "game/build" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/"
    },
    {
      "source": "/(.*)",
      "destination": "/game/build/index.html"
    }
  ]
}