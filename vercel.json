{
  "version": 2,
  "builds": [
    {
      "src": "api/server.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "game/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "game/build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.mjs"
    }
  ]
}